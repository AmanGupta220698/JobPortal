<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.apkglobal.login.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="@drawable/bghome"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome To The Job Portal"

        android:textSize="28sp"
        style="@style/TextAppearance.AppCompat.Body2"/>
<!--
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username"/>
-->

    <ImageView
        android:layout_width="500sp"
        android:layout_height="193dp"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"

        android:src="@drawable/jobhome" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:text="HOW THE JOB PORTAL WORKS"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/work"
        android:background="@drawable/bg"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Some Famous HR"
        android:gravity="center"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:src="@drawable/hr1"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_marginTop="20sp"
                android:src="@drawable/hr2"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_marginTop="20sp"

                android:src="@drawable/hr3"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_marginTop="20sp"

                android:src="@drawable/hr4"/>


        </LinearLayout>
    </ScrollView>



</LinearLayout>
